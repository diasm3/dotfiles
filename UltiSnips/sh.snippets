# convention

# https://google.github.io/styleguide/shellguide.html
# http://redsymbol.net/articles/unofficial-bash-strict-mode/

snippet #! ""
#!/usr/bin/env bash

set -euo pipefail; IFS=$'\n\t'

${0}
endsnippet
snippet if "if"
if [ "${1}" = "" ]; then
	${2}
fi
${0}
endsnippet
snippet elif "elif"
elif [ "${1}" = "" ]; then
	${2}
fi
${0}
endsnippet
snippet for "for"
for ${1} in ${2} ; do
	${0}
done
endsnippet
